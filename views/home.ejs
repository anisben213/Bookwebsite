    </ul>
  </header>
    <h1>wanna read a new book , our website sell the best books that you need to read, please check down</h1>
  <div class="container">
    <% booklist.forEach (book => { %>
        <div class="card">
                <h3><%= book.title %></h4>
                <h4> <%= book.author %></h5>
                <p> <%= book.price %></p>
          </div>
          <% }); %>
            
  </div>
  <script type="text/javascript">
    window.addEventListener("scroll", function(){
      var header = document.querySelector("header")
          header.classList.toggle("sticky", window.scrollY>0)
    })
  </script>
  
